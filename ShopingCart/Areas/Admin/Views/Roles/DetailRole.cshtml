@model PagedList.IPagedList<Model.Action>
@using PagedList.Mvc

@{
	ViewBag.Title = "DetailRole";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="box">
	<div class="box-body">
		<ul class="nav nav-tabs">
			<li class="active"><a href="@Url.Action("DetailRole", "Roles", new { id = @ViewBag.RoleId })">Current Action in Roles</a></li>
			<li><a href="@Url.Action("Actions", "Roles", new { id = @ViewBag.RoleId })">List Action</a></li>
		</ul>
		<h1 style="text-align:center">List Action Detail in Role @ViewBag.Role.RoleName</h1>
		@using (Html.BeginForm("DetailRole", "Roles", FormMethod.Get))
		{
			<div class="row">
				<div class="col-md-2">
					<input type="text" placeholder="Search Actions Name" name="searchString" value="@ViewBag.searchString" />
				</div>
				<div class="col-md-2">
					<button class="btn btn-primary" type="submit">Tìm kiếm</button>
				</div>
				<div class="col-md-6">

				</div>
			</div>
		}
		@using (@Html.BeginForm("RemoveActions", "Roles", FormMethod.Post))
		{

			<div class="box-body">
				<button class="btn btn-danger" style="float:right" type="submit">Delete</button>
				<table id="example1" class="table table-bordered table-hover">
					<thead>
						<tr role="row">
							<th><input name="Listdeletes" class="Listdeletes" type="checkbox" /></th>
							<th>
								Action Name
							</th>
							<th>
								Description
							</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td><input name="checkbox" value="@item.ActionId" type="checkbox" /></td>
								<td>
									@Html.DisplayFor(currentItem => item.ActionName)
								</td>
								<td>
									@Html.DisplayFor(currentItem => item.Description)
								</td>

							</tr>
						}

					</tbody>
				</table>
			</div>
		}
		@Html.PagedListPager(Model, Page => Url.Action("Index", new { Page, @searchString = @ViewBag.searchString }))
		<div>
			<a class="btn btn-primary" href="@Url.Action("Index")">Back to List</a>
		</div>

	</div>
</div>
