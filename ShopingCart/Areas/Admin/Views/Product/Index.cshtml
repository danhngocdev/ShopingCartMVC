@model IEnumerable<Model.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

	<div class="box">
		<h2 style="text-align:center">Managerment Product</h2>
		<p>
			<a class="btn btn-primary" href="@Url.Action("Create")">Create New</a>
		</p>
	<div class="box-body">
		<table id="example1" class="table table-bordered table-hover">
			<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Categorys.Name)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Name)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Slug)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Content)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Images)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Price)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Sale_Price)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.MoreImages)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Created)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.ModifileDate)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Status)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.TopHot)
				</th>
				<th></th>
			</tr>
			</thead>

			<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Categorys.Name)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Name)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Slug)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Content)
					</td>
					<td>
						<img style="width:150px" src="@Html.DisplayFor(modelItem => item.Images)" alt="Alternate Text" />
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Price)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Sale_Price)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.MoreImages)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Created)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.ModifileDate)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Status)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.TopHot)
					</td>
					<td>
						@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
						@Html.ActionLink("Details", "Details", new { id = item.Id }) |
						@Html.ActionLink("Delete", "Delete", new { id = item.Id })
					</td>
				</tr>

			}
			</tbody>
		</table>
	</div>
	</div>
		@section Scripts {
			<script>
				$(document).ready(function () {
					$('#myTable').DataTable();
				});
			</script>
		}
