@model List<Model.CartItem>

    <div class="shopping-cart ml-20 display-inline">
        <a href="cart.html"><b>shopping cart</b>@Model.Count</a>
        @if (Model.Count > 0)
        {

            <ul>
                @foreach (var item in Model)
                {

                    var total = (item.Product.Price * item.Quantity);

                    <li>
                        <div class="cart-img">
                            <a href=""><img width="100px;" src="@item.Product.Images" alt="" /></a>
                        </div>
                        <div class="cart-content">
                            <h3><a href="#">@item.Quantity</a> </h3>
                            <span><b>@item.Product.Name</b></span>
                            <span class="cart-price">@item.Product.Price</span>
                        </div>
                        <div class="cart-del">
                            <a data-id="@item.Product.Id" class="btn-delete"><i class="fa fa-times-circle"></i></a>
                        </div>
                    </li>

                }



                <li>
                    <hr class="shipping-border" />
                    <div class="shipping">
                        <span class="f-left"> Tổng Tiền: </span>
                        <span class="f-right cart-price"></span>
                    </div>
                </li>
                <li class="checkout m-0"><a href="checkout.html">Thanh Toán <i class="fa fa-angle-right"></i></a></li>
            </ul>
        }
        else
        {
            <ul>
                        <li>
                        <div class="cart-content">
                            <span><b>gio hang trong</b></span>
                        </div>
                    </li>
            </ul>
        }

    </div>