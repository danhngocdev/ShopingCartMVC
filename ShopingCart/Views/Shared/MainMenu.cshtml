@model List<Model.Category>
	@{ 
        var user = (Model.User)Session["User"];

	}
	<header class="header-pos">
		<div style="float:right;width:300px;position:relative;position:absolute;top:50px;right:100px">
			<div class="alert alert-success" hidden>
				<strong>Save Successfully!</strong>
			</div>
			<div class="alert alert-danger" hidden>
				<strong>Save fall.Please try again!</strong>
			</div>
		</div>
		<div class="header-area header-middle">
			<div class="container-fluid">
				<div class="row">
					<div class="col-md-2 col-sm-3 col-xs-12">
						<div class="logo">
							<a href="index.html"><img src="~/Asset/FrontEnd/images/logo.png" alt="" width="70px;"></a>
						</div>
					</div>
					<div class="col-md-10 col-sm-9 col-xs-12 text-right xs-center">
						<div class="main-menu display-inline hidden-sm hidden-xs">
							<nav>
                                <ul>
                                    <li>
                                        <a href="">Trang Chủ</a>
                                    </li>
                                    <li>
                                        <a href="">Giới Thiệu</a>
                                    </li>

                                    @foreach (var item in Model)
                                    {
                                        <li>
                                            <a href="">@item.Name</a>
                                            @Html.Action("LoadChilden","Home", new {parentID = item.ID })
                                        </li>
                                    }
                                    @*<li>
                                        <a href="shop.html">Phòng Khách</a>
                                        <ul class="submenu">
                                            <li><a href="index.html">home version 1</a></li>
                                            <li><a href="index-2.html">home version 2</a></li>
                                            <li><a href="index-3.html">home version 3</a></li>
                                            <li><a href="index-4.html">home version 4</a></li>
                                        </ul>
                                    </li>*@
                                 
                                    <li>
                                        <a href="">Liên Hệ</a>
                                    </li>
                                </ul>

							</nav>
						</div>
						
					<div class="search-block-top display-inline">
						@if (Session["User"] != null)
						{
							<div><p style="font-weight:700;color:#2c2c2c">Hi! @user.FullName | <a style="color:#2c2c2c" href="@Url.Action("LogOut","Login")">Log out</a></p></div>
						}
						else
						{
							<div><p style="font-weight:700;color:#2c2c2c"><a style="color:#2c2c2c" href="@Url.Action("Index","Login")">Login</a> | <a style="color:#2c2c2c" href="@Url.Action("Index","Resgiter")">Register</a></p></div>
						}


					</div>
						@{ Html.RenderAction("HeaderCart", "Home");}
					</div>
				</div>
			</div>
		</div>
		<div class="mobile-menu-area visible-sm visible-xs">
			<div class="container-fluid">
				<div class="row">
					<div class="col-md-12">
						<div class="mobile-menu">
							<nav id="mobile-menu-active">
                                <ul>
                                    <li>
                                        <a href="">Trang Chủ</a>
                                    </li>
                                    <li>
                                        <a href="">Giới Thiệu</a>
                                    </li>
                                    @foreach (var item in Model)
                                    {
                                        <li>
                                            <a href="">@item.Name</a>
                                            @Html.Action("LoadChilden", "Home", new { parentID = item.ID })
                                        </li>
                                    }
                                    <li>
                                        <a href="">Liên Hệ</a>
                                    </li>


                                </ul>
							</nav>
						</div>
					</div>
				</div>
			</div>
		</div>
	</header>