@model Model.Contact
@{
    ViewBag.Title = "Liên Hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section footer{
    <script src="~/Asset/FrontEnd/js/Contact.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDoNgWYN4FwpFh5xlI7iuRLLS6umBS4MTw&callback=initMap">
    </script>
    <script>
        function initMap() {
            var uluru = { lat: 21.046462, lng: 105.783451 };
            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 4,
                center: uluru
            });

            var contentString = '@Model.Content';


            var infowindow = new google.maps.InfoWindow({
                content: contentString
            });

            var marker = new google.maps.Marker({
                position: uluru,
                map: map,
                title: 'Địa Chỉ'
            });
            marker.addListener('click', function () {
                infowindow.open(map, marker);
            });
        }
        google.maps.event.addDomListener(window, 'load', initMap);
    </script>
}

<div class="space-custom"></div>
<!-- breadcrumb start -->
<div class="breadcrumb-area">
    <div class="container">
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-home"></i></a></li>
            <li><a href="#">Trang Chủ</a></li>
            <li class="active">Liên Hệ</li>
        </ol>
    </div>
</div>
<!-- breadcrumb end -->
<!-- map-area start -->
<div class="map-area">
    <div class="container">
        <div id="map" style="width:100%;height:410px;"></div>
    </div>
</div>
<!-- map-area end -->
<!-- contact-area start -->
<div class="contact-area ptb-60">
    <div class="container">
        <div class="row">
            <!-- contact-info start -->
            <div class="col-md-6 col-sm-12 col-xs-12">
                <div class="contact-info">
                    <h3>Thông Tin Liên Hệ</h3>
                    <ul>
                        @Html.Raw(Model.Content)

                    </ul>
                </div>
            </div>
            <!-- contact-info end -->
            <div class="col-md-6 col-sm-12 col-xs-12">
                <div class="contact-form">
                    <h3><i class="fa fa-envelope-o"></i> Gửi Tin Nhắn Liên Hệ</h3>
                    <div class="row">
                        <form method="post">
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input name="name" id="name" type="text" placeholder="Full Name " />
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input name="email" id="email" type="email" placeholder="Email " />
                            </div>
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <input name="phone" id="phone" type="text" placeholder="Phone" />
                            </div>
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <textarea name="message" id="message" cols="30" rows="10" placeholder="Message"></textarea>
                                <button type="submit" id="btnSend">Gửi</button>

                            </div>
                        </form>
                        <p class="form-messege"></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- contact-area end -->
<!-- service-area start -->
<div class="service-area pt-70 pb-40 gray-bg">
    <div class="container">
        <div class="row">
            <div class="col-md-3 col-sm-6">
